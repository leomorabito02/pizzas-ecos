# ============================================
# PIZZA ECOS - AMBIENTE DE VARIABLES
# ============================================
# Copia este archivo a .env y configura con tus valores
# NUNCA commits .env a git (ya está en .gitignore)

# ============================================
# DOCKER - BASE DE DATOS
# ============================================
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=ecos
MYSQL_USER=ecos_user
MYSQL_PASSWORD=ecos_pass

# ============================================
# BACKEND - CONFIGURACIÓN GENERAL
# ============================================
PORT=8080
ENV=local
DEBUG=false

# ============================================
# BACKEND - BASE DE DATOS
# ============================================
# Local/Docker: mysql://user:password@host:3306/database?parseTime=true
# Cloud SQL GCP: mysql+unix:///cloudsql/project:region:instance/database?parseTime=true
DATABASE_URL=mysql://ecos_user:ecos_pass@mysql:3306/ecos?parseTime=true
DATABASE_CA_CERT=disabled

# ============================================
# BACKEND - AUTENTICACIÓN
# ============================================
# Generar con: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24

# ============================================
# BACKEND - CORS
# ============================================
# Separados por comas, sin espacios
CORS_ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000,https://ecos-ventas-pizzas.netlify.app,https://qa-ecos-ventas-pizzas.netlify.app

# ============================================
# GOOGLE SHEETS INTEGRATION
# ============================================
# Descarga el JSON desde Google Cloud Console
# Service Account → Keys → Create new key → JSON
CREDS_JSON={"type":"service_account","project_id":"..."}

# ID de la hoja de cálculo (del URL: docs.google.com/spreadsheets/d/ESTO_ES_EL_ID)
SPREADSHEET_ID=1E8bLD1DKp3ZrsmLb05O7cAJ-Qn929yBSTrZ18BSeVk0

# ============================================
# NETLIFY - DEPLOYMENT (Frontend)
# ============================================
# Token personal de Netlify (Settings → Applications → Personal access tokens)
NETLIFY_AUTH_TOKEN=nfp_your_token_here

# Site IDs para cada ambiente
NETLIFY_SITE_ID_QA=abc123xyz456
NETLIFY_SITE_ID_PROD=xyz789abc456

# ============================================
# GOOGLE CLOUD - CONFIGURATION
# ============================================
# QA Environment
GCP_PROJECT_ID_QA=pizzas-ecos-qa
GCP_SERVICE_ACCOUNT_QA=github-actions@pizzas-ecos-qa.iam.gserviceaccount.com
GCP_WORKLOAD_IDENTITY_PROVIDER_QA=projects/123456789/locations/global/workloadIdentityPools/github-pool/providers/github-provider
GCP_REGION_QA=us-central1

# Production Environment
GCP_PROJECT_ID_PROD=pizzas-ecos-prod
GCP_SERVICE_ACCOUNT_PROD=github-actions@pizzas-ecos-prod.iam.gserviceaccount.com
GCP_WORKLOAD_IDENTITY_PROVIDER_PROD=projects/987654321/locations/global/workloadIdentityPools/github-pool/providers/github-provider
GCP_REGION_PROD=us-central1

# ============================================
# SLACK NOTIFICATIONS (Opcional)
# ============================================
# Webhook para notificaciones de deploy
SLACK_WEBHOOK=https://hooks.slack.com/services/XXXXX/XXXXX/XXXXX
SLACK_CHANNEL=#deployments
SLACK_USERNAME=Pizza ECOS Bot

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# SECURITY
# ============================================
# HTTPS en producción
TLS_ENABLED=false
TLS_CERT_PATH=./etc/ssl/cert.pem
TLS_KEY_PATH=./etc/ssl/key.pem

# API Key (para endpoints internos)
API_KEY=your-internal-api-key

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
